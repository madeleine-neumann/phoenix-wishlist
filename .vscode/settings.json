// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "_build": true,
    ".nvmrc": true,
    ".deliver": false,
    ".mix_tasks": true,
    ".elixir_ls": true,
    ".vscode": true,
    "Gemfile*": true,
    "node_modules": true,
    "deps": true
  },
  "search.exclude": {
    "priv/static": true,
    "priv/templates": true,
    "priv/gettext": true,
    "priv/repo/dump.sql": true,
    "priv/repo/structure.sql": true,
    "node_modules": true,
    "deps": true,
    "log": true,
    "cover": true
  },
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "files.trimTrailingWhitespace": true,
  "vsicons.presets.angular": false,
  "css.validate": false
}
